/*
Title: Write a program to print sum of n even numbers using recursive
Author: Tanishq Deerghasi
Date: 20-03-2023
*/

#include<stdio.h>
int validate(int x)
{
	int val;
	if(x%2==0)
		val = esum(x);
	else
		val = esum(x-1);
		
	return val;
}

int esum(int x)
{
	if(x==2)
		return x;
	else
		return x+esum(x-2);
}

int main()
{
	int n,e;
	printf("enter a number");
	scanf("%d",&n);
	
	e = validate(n);
	
	printf("Even Numbers Sum is %d",e);
	return 0;
}
